{
  "manifest_version": 3,
  "name": "Chessable to Lichess Redirect",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_popup": "popups/popup.html"
  },
  "description": "Redirects Chessable analysis to Lichess with the current FEN and board orientation.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "author": "Xavier Lloyd",
  "homepage_url": "https://github.com/professor-eggs/chessable-lichess-analysis",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://www.chessable.com/analysis/*"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
