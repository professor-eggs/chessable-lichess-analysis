{
  "manifest_version": 3,
  "name": "Chessable to Lichess Redirect",
  "version": "1.0",
  "description": "Redirects Chessable analysis to Lichess with the current FEN.",
  "permissions": ["tabs"],
  "host_permissions": ["*://www.chessable.com/analysis/*"],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chessable.com/analysis/*"],
      "js": ["background.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
